generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id           String    @id
  shop         String
  state        String
  isOnline     Boolean   @default(false)
  scope        String?
  expires      DateTime?
  accessToken  String
  userId       BigInt?
  firstName    String?
  lastName     String?
  email        String?
  accountOwner Boolean   @default(false)
  locale       String?
  collaborator Boolean   @default(false)
  emailVerified Boolean  @default(false)
}

model InventoryLog {
  id        String   @id @default(cuid())
  productId String
  variantId String
  oldQty    Int
  newQty    Int
  updatedAt DateTime @default(now())
}

model LoyaltyPoints {
  id        String   @id @default(cuid())
  customerId String   @unique
  points    Int
  updatedAt DateTime @default(now())
}